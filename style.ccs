body{
	background-color:#602C94;
	font-family: "Libre Baskerville", serif;
	margin:0;
}
header{
	background-color:#F9C9FA;
	width:80%;
	border-radius:15px;
	margin-left:auto;
	margin-right:auto;
	margin-top:10px;
	padding-top:20px;
	padding-bottom:20px;
	display:flex;
	justify-content:space-evenly;
	font-size:19;
}
main{
	margin-left:3%;
	margin-right:3%;
}
footer{
	display:flex;
	justify-content:space-evenly;
	background-color:4D2256;
	padding-top:50px;
}
h1{
	text-align:center;
	color:#B1FBA5;
	text-shadow:5px 3px 5px yellow;
}
h2{
	background-color:#CDA8E6;
	border-radius:10px;
	padding:5px;
	font-size:21px;
}
h3{
	color:#B1FBA5;
	text-shadow:5px 3px 5px yellow;
}
header a{
	background-color:#B6CAFD;
	text-decoration:none;
	border-radius:10px;
	padding:5px 8px 5px 8px;
	color:#602C94;
}
.gif{
	position:absolute;
	
}
.pink{
	color:#FE9EE3;
	margin-top:auto;
	margin-bottom:auto;
}
.place .pink, .place .blue{
	width:30%;
	
}
.blue{
	color:#8FABF5;
	margin-top:auto;
	margin-bottom:auto;
}
.circle img{
	width:80%;
	border-radius:50%;
	margin-left:10%;
	margin-right:10%;
}
.dream p{
	background-color:white;
	width:45%;
	padding:30px 10px 30px 10px;
	position:relative;
	left:650px;
	bottom:640px;
}
.dream{
	height:900px;
}
footer .pink{
	display:flex;
	align-items:center;
}
form{
	color:#602C94;
	background-color:#CDA8E6;
	text-align:center;
	width:460px;
	padding-top:15px;
	padding-bottom:15px;
	margin-bottom:30px;
}
form button{
	background-color:#602C94;
	color:#B1FBA5;
	border-radius:20px;
	padding: 10px 8px 10px 8px;
	border:1px solid white;
	box-shadow:5px 3px 15px yellow;
}
.place div{
	display:flex;
	justify-content:space-evenly;
}
.circle div{
	display:flex;
	justify-content:space-evenly;
}
.circle article{
	width:30%;
	text-align:justify;
	margin-bottom:25px;
}
.cart article{
	display:flex;
}
.cart div{
	padding-right:50px;
	padding-left:50px;
	text-align:left;
	margin-top:auto;
	margin-bottom:auto;
}
.cart h3{
	background-color:#D9D9D9;
	border-radius:10px;
	padding:5px;
	text-align:center;
	color:black;
	text-shadow:none;
}
.cart{
	background-color:#6e57c1;
}
section{
	margin-top:35px;
}
.lampa{
	position:relative;
	left:30px;
	bottom:120px;
}
.hands{
	position:relative;
	left:230px;
	bottom:230px;
}
